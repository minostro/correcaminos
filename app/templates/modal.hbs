<div class="modal-backdrop fade in">&nbsp;</div>
<div class="modal fade in" style='display:block;'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{title}}</h4>
      </div>
      <div class="modal-body">
        <p>{{message}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" {{action "closeModal"}}>{{cancelButtonText}}</button>
        <button type="button" class="btn btn-primary" {{action "confirm"}}>{{confirmButtonText}}</button>
      </div>
    </div>
  </div>
</div>